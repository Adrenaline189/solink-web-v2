{
  "baseUrl": "https://api-solink.network",
  "type": "extension_farm",
  "amount": 50,
  "bursts": 40,
  "concurrency": 3,
  "dailyCap": 2000,

  // รายชื่อกระเป๋า (จะ override ได้ด้วย ENV: WALLETS="demo_wallet_test1,demo_wallet_test2")
  "wallets": [
    { "wallet": "demo_wallet_test1" },
    { "wallet": "demo_wallet_test2", "token": "STATIC_JWT_TOKEN_IF_YOU_HAVE" }
  ],

  // ตั้งค่า rate limit + jitter
  "rate": {
    "rps": 3,
    "bucketSize": 6,
    "refillEveryMs": 350,
    "jitterMs": [50, 150]
  },

  // โหมดปรับตัวเมื่อโดน 429 เยอะ ๆ
  "adaptiveMode": true
}
