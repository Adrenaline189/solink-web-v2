// =========================
//   Prisma Schema (Full)
// =========================

// ----- Prisma Client -----
generator client {
  provider = "prisma-client-js"
}

// ----- PostgreSQL datasource -----
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
/*        MODELS          */
// =========================

model Setting {
  id     String  @id @default(cuid())
  userId String?
  key    String
  value  String

  @@unique([userId, key])
  @@index([key])
}

model User {
  id        String        @id @default(cuid())
  wallet    String?       @unique
  createdAt DateTime      @default(now())
  events    PointEvent[]

  // optional back-relations
  metricsHourly MetricsHourly[]
  metricsDaily  MetricsDaily[]
}

model PointEvent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  amount    Int
  meta      Json?
  nonce     String?  @unique
  createdAt DateTime @default(now())

  @@index([userId, createdAt])   // เดิมมีแล้ว
  @@index([createdAt])           // รวมกราฟทั้งระบบ
  @@index([type, createdAt])     // กรองตาม type
}

model PointBalance {
  userId    String   @id
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt
  // @@index([updatedAt]) // เปิดใช้ถ้าคิวรีบ่อย
}

// =========================
/*        METRICS          */
// =========================

model MetricsHourly {
  id           String   @id @default(cuid())

  /// ตัวแทนช่วงชั่วโมงแบบ UTC (เช่น 2025-11-11T10:00:00Z)
  hourUtc      DateTime

  /// ผู้ใช้เป้าหมาย (ว่าง = แถวสรุปทั้งระบบ)
  userId       String?
  user         User?    @relation(fields: [userId], references: [id])

  pointsEarned Int      @default(0)
  uptimePct    Float?   // 0..100
  avgBandwidth Float?   // Mbps
  qfScore      Float?
  trustScore   Float?

  createdAt    DateTime @default(now())

  // คีย์ผสมสำหรับ upsert ต่อชั่วโมง/ผู้ใช้ (รวม userId = null)
  @@unique([hourUtc, userId], name: "hourUtc_userId_unique")
  @@index([hourUtc])
  @@index([userId])
}

model MetricsDaily {
  id           String   @id @default(cuid())

  /// ตัวแทนช่วงวันแบบ UTC (เช่น 2025-11-11T00:00:00Z)
  dayUtc       DateTime

  /// ผู้ใช้เป้าหมาย (ว่าง = แถวสรุปทั้งระบบ)
  userId       String?
  user         User?    @relation(fields: [userId], references: [id])

  pointsEarned Int      @default(0)
  uptimePct    Float?
  avgBandwidth Float?
  qfScore      Float?
  trustScore   Float?

  createdAt    DateTime @default(now())

  @@unique([dayUtc, userId], name: "dayUtc_userId_unique")
  @@index([dayUtc])
  @@index([userId])
}
