// =========================
//   Prisma Schema (Full)
// =========================

// ----- Prisma Client -----
generator client {
  provider = "prisma-client-js"
}

// ----- PostgreSQL datasource -----
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
//        MODELS
// =========================

model Setting {
  id     String  @id @default(cuid())
  userId String?
  key    String
  value  String

  @@unique([userId, key])
  @@index([key])
}

model User {
  id        String        @id @default(cuid())
  wallet    String?       @unique
  createdAt DateTime      @default(now())
  events    PointEvent[]

  // (ไม่บังคับ) ความสัมพันธ์กับ Metrics
  metricsHourly MetricsHourly[]
  metricsDaily  MetricsDaily[]
}

model PointEvent {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String
  amount    Int
  meta      Json?
  nonce     String?  @unique
  createdAt DateTime @default(now())

  @@index([userId, createdAt])   // มีอยู่เดิม
  @@index([createdAt])           // เพิ่ม: รวมกราฟทั้งระบบ
  @@index([type, createdAt])     // เพิ่ม: กรองตาม type เร็วขึ้น
}

model PointBalance {
  userId    String   @id
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt

  // ถ้าคิวรีตามเวลาอัปเดตบ่อย ๆ ค่อยเปิดใช้
  // @@index([updatedAt])
}

// =========================
//        METRICS
// =========================

model MetricsHourly {
  id           String   @id @default(cuid())

  /// ตัวแทนช่วงชั่วโมงแบบ UTC (เช่น 2025-11-11T10:00:00Z)
  hourUtc      DateTime @index

  /// ผู้ใช้เป้าหมาย (เว้นว่าง = แถวสรุปทั้งระบบ)
  userId       String?  @index
  user         User?    @relation(fields: [userId], references: [id])

  pointsEarned Int      @default(0)
  uptimePct    Float?   // 0..100
  avgBandwidth Float?   // Mbps
  qfScore      Float?
  trustScore   Float?

  createdAt    DateTime @default(now())

  // ให้ upsert ได้คีย์เดียวต่อชั่วโมง/ผู้ใช้ (รวมกรณี userId = null)
  @@unique([hourUtc, userId], name: "hourUtc_userId_unique")
}

model MetricsDaily {
  id           String   @id @default(cuid())

  /// ตัวแทนช่วงวันแบบ UTC (เช่น 2025-11-11T00:00:00Z)
  dayUtc       DateTime @index

  /// ผู้ใช้เป้าหมาย (เว้นว่าง = แถวสรุปทั้งระบบ)
  userId       String?  @index
  user         User?    @relation(fields: [userId], references: [id])

  pointsEarned Int      @default(0)
  uptimePct    Float?
  avgBandwidth Float?
  qfScore      Float?
  trustScore   Float?

  createdAt    DateTime @default(now())

  @@unique([dayUtc, userId], name: "dayUtc_userId_unique")
}
